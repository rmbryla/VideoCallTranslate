<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/content_video" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/switchCameraActionFab"
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            android:background="@drawable/ic_switch_camera_white_24dp" />

        <Button
            android:id="@+id/localVideoActionFab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/ic_videocam_white_24dp" />

        <Button
            android:id="@+id/muteActionFab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/ic_mic_white_24dp" />

        <Button
            android:id="@+id/connectActionFab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/ic_video_call_white_24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
